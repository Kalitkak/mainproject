<div class="container" id="contact">
<h1>Contact</h1>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter your name", :required => true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter your Email", :required => true, type:'email'%>
  </div>

  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter you message", rows: 5, :required => true, :pattern => "[A-Za-z-0-9]+\s[A-Za-z-'0-9]+" %>
  </div>

</div>
<%= form.submit "Send", class: "form_label" %>
<% end %>
</div>
