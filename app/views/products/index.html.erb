<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
<h1>Products</h1>
</div>
<%= link_to 'New Product', new_product_path %>
</div>

<table>
  <thead>
   <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Image url</th>
     <th>Color</th>
     <th>Price</th>
     <th colspan="3"></th>
   </tr>
 </thead>

<tbody>
  <div class="container-fluid">
    <div class="row" id="products">
      <div class="col-sm">
        <% @products.each do |product| %>
      <%= render partial: "product", locals: {product: product} %>
    <% end %>
    </div>
  </div>
</tbody>
</table>
<br>
