<p id="notice"><%= notice %></p>

<h1>Products</h1>


<table>
  <thead>
   <tr>
     <th>Name</th>
     <th>Description</th>
     <th>Image url</th>
     <th>Color</th>
     <th>Price</th>
     <th colspan="3"></th>
   </tr>
 </thead>

<tbody>
  <div class="container-fluid">
    <div class="row" id="products">
      <div class="col-sm">
        <% @products.each do |product| %>
          <p>
            Product: <%= link_to product.title, product %>
          </p>
          <%= product.description %>
          <%= product.colour %>
          <%= product.price %>

          <%= image_tag(product.image_url, class: "img-fluid" , :size => "260x180") unless product.image_url.nil? %>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div><!-- /col -->
      <% end %>
    </div>
  </div>
</tbody>
</table>
<br>

